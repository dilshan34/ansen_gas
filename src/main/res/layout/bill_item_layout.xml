<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="item_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/item_name"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="fullQty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/fullQty"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="emptyQty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/emptyQty"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/refillQty"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="refillQty"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/newQty"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="newQty"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/refillPrice"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="refillPrice"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/newPrice"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="newPrice"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="totalAmount"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btndelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/delete"
                android:layout_marginLeft="10dp"

                />


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>