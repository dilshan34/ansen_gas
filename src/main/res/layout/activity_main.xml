<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/white"
    tools:context=".Ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO" />
    </RelativeLayout>

    <RelativeLayout
        android:elevation="45dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/card_background"
        android:layout_weight="4">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:drawableEnd="@drawable/user2"
                android:id="@+id/txtUsername"
                android:hint="User Name"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/edit_text"
                android:layout_marginRight="30dp"
                android:drawableRight="@drawable/user1">

            </EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/pw"
                android:hint="Password"
                android:id="@+id/txtPassword"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/edit_text"
                android:layout_marginRight="30dp"
                android:drawableRight="@drawable/user1">

            </EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="Login"
                android:fontFamily="@font/roboto"
                android:background="@drawable/btn"
                android:layout_height="52dp"
                android:id="@+id/btnLogin"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="10dp"
                android:text="Fogot your Password?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" Click here"
                android:fontFamily="@font/roboto_bold"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >


        <ImageView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/laugfs"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary"
        android:layout_weight="0.7">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_light"
            android:layout_centerVertical="true"
            android:text="Copyright Â© ERAV Technology 2021"/>
    </RelativeLayout>


</LinearLayout>