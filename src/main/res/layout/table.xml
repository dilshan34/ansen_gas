<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="2dp"
    android:weightSum="6"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    android:padding="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:editable="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/date"
                android:hint="Date"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/date"
                android:autofillHints="" />

            <EditText
                android:layout_width="150dp"
                android:editable="false"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/user2"
                android:hint="User"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/user2" />


        </LinearLayout>





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/user2"
                android:hint="Customer"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/user2"

                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/dollar"
                android:hint="Balance"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/user2"

                />


        </LinearLayout>





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/user2"
                android:hint="Customer"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/user2"

                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/user2"
                android:hint="Customer"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/user2"

                />


        </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                        android:layout_column="1"
                        android:gravity="bottom|center"
                        android:padding="10sp"
                        android:text="Stock"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:padding="10sp"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_column="3"
                        android:textSize="20sp"
                        android:textColorHint="@color/blue"
                        android:background="#FFFFFF"
                        android:gravity="bottom|center"
                        android:padding="10sp"
                        android:text="Sale"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:padding="10sp"
                        android:textColor="#050505" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="100dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:drawableRight="@drawable/gas"
                        android:drawablePadding="1dp"
                        android:gravity="start|center_vertical"
                        android:padding="10sp"
                        android:text="37KG"
                        android:textColor="#050505" />

                    <EditText
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="4"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="100dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="60dp"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:drawableRight="@drawable/gas"
                        android:gravity="start|center_vertical"
                        android:padding="10sp"
                        android:text="12KG"
                        android:textColor="#050505" />

                    <EditText
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="4"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:drawableRight="@drawable/gas5"
                        android:gravity="start|center_vertical"
                        android:padding="10sp"
                        android:text="5KG"
                        android:textColor="#050505" />

                    <EditText
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="4"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:drawableRight="@drawable/gas5"
                        android:background="@drawable/border"
                        android:gravity="start|center_vertical"
                        android:padding="10sp"
                        android:text="2KG"
                        android:textColor="#050505" />

                    <EditText
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border_black"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />

                    <EditText
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_column="4"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_blue"
                        android:padding="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="80dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:gravity="center|top"
                        android:padding="10sp"
                        android:text="Full"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/border"
                        android:gravity="center|top"
                        android:padding="10sp"
                        android:text="Empty"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:gravity="center|top"
                        android:padding="10sp"
                        android:text="Refill"
                        android:textColor="#050505" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_column="4"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:gravity="center|top"
                        android:padding="10sp"
                        android:text="New"
                        android:textColor="#050505" />
                </TableRow>
            </TableLayout>


        </HorizontalScrollView>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/primary"
                android:layout_marginRight="15dp"
                android:text="button"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/primary"
                android:layout_marginLeft="20dp"
                android:text="button"
                android:textColor="@color/black"/>
        </LinearLayout>



    </RelativeLayout>



</LinearLayout>